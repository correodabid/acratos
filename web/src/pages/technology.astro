const workflow = [
  {
    step: 1,
    title: 'Desire Creation',
    description: 'Users create signed Desires that specify computation requirements.'
  },
  {
    step: 2,
    title: 'Resource Matching',
    description: 'The network matches computation requests with available resources.'
  },
  {
    step: 3,
    title: 'Distributed Execution',
    description: 'Computations are processed across multiple nodes in parallel.'
  },
  {
    step: 4,
    title: 'Verification',
    description: 'Results are verified using cryptographic proofs.'
  },
  {
    step: 5,
    title: 'Result Delivery',
    description: 'Verified results are delivered back to the requester.'
  }
