  },
  {
    icon: 'ðŸ”—',
    title: 'Decentralized Network',
    description: 'A distributed architecture that eliminates single points of failure and promotes resilience.'
  },
  {
    icon: 'ðŸ”’',
    title: 'Verifiable Computation',
    description: 'Cryptographic proofs ensure the integrity of all computations across the network.'
  },
  {
    icon: 'âš¡',
    title: 'Acratos Compute Market',
    description: 'A decentralized marketplace for computational resources, enabling efficient resource allocation.'
  },
  {
    icon: 'ðŸ§ ',
    title: 'Distributed Intelligence',
    description: 'AI models that can be split and processed across multiple nodes for optimal performance.'
  },
  {
    icon: 'ðŸ”—',
    title: 'Interoperable',
    description: 'Designed to work seamlessly with existing blockchain and AI ecosystems.'
  }
