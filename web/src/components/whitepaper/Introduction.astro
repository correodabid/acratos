<!-- Introduction Section - The Problem -->
<Section 
  id="problem"
  title="The Broken Internet"
  className="py-24 bg-gradient-to-b from-gray-900 to-gray-950"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Unified Section: The Broken Internet -->
    <div class="text-center mb-20">
      <span class="inline-block bg-red-500/10 text-red-400 text-sm font-medium px-4 py-1.5 rounded-full mb-6 tracking-wide">THE LIMITATIONS OF TODAY'S INTERNET</span>
