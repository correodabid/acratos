      <!-- Impact Statistics -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-16">
        {STATS.map((stat, index) => {
          if (!isStatItem(stat)) return null;
          const colorClasses = {
            red: 'border-red-500/30 hover:bg-red-500/10',
            yellow: 'border-yellow-500/30 hover:bg-yellow-500/10',
            indigo: 'border-indigo-500/30 hover:bg-indigo-500/10',
            purple: 'border-purple-500/30 hover:bg-purple-500/10'
          };
          
          const textColors = {
            red: 'text-red-400',
            yellow: 'text-yellow-400',
            indigo: 'text-indigo-400',
            purple: 'text-purple-400'
          };
          
          return (
            <div 
              data-key={`stat-${index}`}
              class={`p-4 rounded-xl border ${colorClasses[stat.color as keyof typeof colorClasses]} transition-all duration-300 hover:scale-105`}
            >
              <div class={`text-3xl font-bold mb-2 ${textColors[stat.color as keyof typeof textColors]}`}>
                {stat.value}
              </div>
              <div class="text-sm text-gray-300">{stat.label}</div>
            </div>
          );
        })}
      </div>

      <!-- The Case for Decentralization -->
    <div class="bg-gradient-to-r from-indigo-900/30 to-purple-900/30 border border-indigo-900/50 rounded-2xl p-8 mb-16 text-left">
