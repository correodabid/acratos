<div class="bg-gray-900/50 py-16">
  <div class="max-w-7xl mx-auto px-6 sm:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Únete a la Comunidad Acratos
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Conéctate y sé parte de la comunidad Acratos. Sigue nuestro progreso y únete a la conversación.
      </p>
    </div>
    
    <div class="flex flex-wrap justify-center gap-6">
      {socialLinks.map((social) => (
        <a 
          href={social.href} 
          target="_blank" 
          rel="noopener noreferrer"
          class={`inline-flex items-center px-6 py-3 border border-gray-700 rounded-lg bg-gray-800/50 hover:bg-gray-700/50 transition-colors duration-200 group`}
          aria-label={`${social.name} (opens in new tab)`}
        >
          <svg 
            class={`w-6 h-6 mr-3 text-${social.color} group-hover:text-${social.hoverColor} transition-colors duration-200`} 
            fill="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path fill-rule="evenodd" d={social.icon} clip-rule="evenodd" />
          </svg>
          <span class="text-white font-medium">{social.name}</span>
        </a>
      ))}
    </div>
  </div>
</div>
