---
// src/components/ui/Card.astro
interface Props {
  title: string;
  description: string;
  icon: string;
  gradientFrom?: string;
  gradientTo?: string;
  iconColor?: string;
  className?: string;
}

const { 
  title, 
  description, 
  icon, 
  gradientFrom = 'from-indigo-500', 
  gradientTo = 'to-purple-500',
  iconColor = 'text-indigo-400',
  className = '' 
} = Astro.props as Props;
---

<div class={`group bg-gray-800/50 hover:bg-gray-800/70 p-6 rounded-xl border border-gray-700/50 hover:border-${gradientFrom.split('-')[1]}-500/30 transition-all duration-300 ${className}`}>
  <div class="flex items-start">
    <div class={`w-10 h-10 rounded-lg bg-${gradientFrom.split('-')[1]}-500/10 flex items-center justify-center mr-4 group-hover:bg-${gradientFrom.split('-')[1]}-500/20 transition-colors`}>
      <slot name="icon">
        <span class={`text-2xl ${iconColor}`}>
          {icon}
        </span>
      </slot>
    </div>
    <div>
      <h4 class="text-lg font-semibold text-white mb-2">{title}</h4>
      <p class="text-sm text-gray-300">{description}</p>
    </div>
  </div>
</div>
