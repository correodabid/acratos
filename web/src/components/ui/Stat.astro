---
// src/components/ui/Stat.astro
interface Props {
  value: string | number;
  label: string;
  icon?: string;
  color?: 'indigo' | 'pink' | 'blue' | 'green' | 'purple' | 'red' | 'amber';
  trend?: 'up' | 'down' | 'neutral';
  trendValue?: string;
  className?: string;
}

const { 
  value, 
  label, 
  icon = 'ðŸ“Š',
  color = 'indigo',
  trend,
  trendValue,
  className = ''
} = Astro.props as Props;

const colorMap = {
  indigo: 'bg-indigo-500/10 text-indigo-400 border-indigo-500/20',
  pink: 'bg-pink-500/10 text-pink-400 border-pink-500/20',
  blue: 'bg-blue-500/10 text-blue-400 border-blue-500/20',
  green: 'bg-green-500/10 text-green-400 border-green-500/20',
  purple: 'bg-purple-500/10 text-purple-400 border-purple-500/20',
  red: 'bg-red-500/10 text-red-400 border-red-500/20',
  amber: 'bg-amber-500/10 text-amber-400 border-amber-500/20',
};
---

<div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-${color}-500/30 transition-all duration-300">
  <div class="flex items-center">
    {icon && (
      <div class={`w-12 h-12 rounded-lg ${colorMap[color]} flex items-center justify-center mr-4`}>
        <span class="text-2xl">
          {icon}
        </span>
      </div>
    )}
    <div>
      <div class="text-3xl font-bold text-white">{value}</div>
      <div class="text-sm text-gray-400 mt-1">{label}</div>
    </div>
  </div>
</div>
